extend Layout
block content
    form(name="signIn", type="submit", method="get", action="/FindUser", onsubmit="return validateSignIn()")
      h2 Sign In 
      div
        input#email(class="input_field", type="email", name="Email", placeholder="Email", required)
      div
        input#Password(class="input_field", type="password", name="Password", placeholder="Password", required)
        p#text
          | WARNING! Caps lock is ON.
      .msg
      div
        input(type="checkbox", onclick="myFunction()")
        | Show Password
      div
        input#SignIn.Buttons(type="submit", value="Log In")